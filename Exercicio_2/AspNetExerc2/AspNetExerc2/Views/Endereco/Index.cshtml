@model List<Endereco>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Consultar e Cadastrar CEP</title>
</head>
<body>
    <div class="container" style="margin-top:30px">
        <div>
            <h1>Consultar e Cadastrar CEP</h1>
        </div>
        <div style="margin-top:30px">
            <form asp-action="Cadastrar" asp-controller="Endereco" class="col-6">
                <div>
                    <input type="submit" value="Consultar e Cadastrar" class="btn btn-primary" />
                </div>
                <div style="margin-top:10px">
                    <label><b>Cep</b></label>
                    <input type="text" id="txtCep" class="form-control col-4" name="txtCep" />

                </div>
            </form>
        </div>
        <div style="margin-top:30px">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Cep</th>
                        <th scope="col">Logradouro</th>
                        <th scope="col">Complemento</th>
                        <th scope="col">Bairro</th>
                        <th scope="col">Localidade</th>
                        <th scope="col">Uf</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Endereco e in Model)
                    {
                        <tr>
                            <td>@e.Cep</td>
                            <td>@e.Logradouro</td>
                            <td>@e.Complemento</td>
                            <td>@e.Bairro</td>
                            <td>@e.Localidade</td>
                            <td>@e.Uf</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>